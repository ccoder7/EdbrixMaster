<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/app_min_margin"
    android:background="@color/ColorsWhite"
    android:elevation="2dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/app_normal_padding">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgTileThumbnail"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="top|start"
            android:src="@drawable/grey_border" />

        <TextView
            android:id="@+id/txtPageIndex"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_image_orange_whiteborder"
            android:gravity="center"
            android:layout_gravity="bottom|end"
            android:text="1"
            android:padding="@dimen/app_normal_padding"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </FrameLayout>
</LinearLayout>