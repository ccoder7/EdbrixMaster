<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/app_min_padding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBold"
            android:layout_width="36dp"
            android:padding="@dimen/app_normal_padding"
            android:layout_height="36dp"
            android:background="@color/colorWhiteSmoke"
            android:layout_margin="@dimen/app_min_margin"
            android:src="@drawable/icon_bold_grey"/>

        <ImageView
            android:id="@+id/btnItalics"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:background="@color/colorWhiteSmoke"
            android:layout_margin="@dimen/app_min_margin"
            android:src="@drawable/icon_italics_grey"/>

        <ImageView
            android:id="@+id/btnUnderline"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@color/colorWhiteSmoke"
            android:layout_margin="@dimen/app_min_margin"
            android:padding="6dp"
            android:src="@drawable/icon_underline_grey"/>

        <EditText
            android:id="@+id/edtSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/app_min_padding"
            android:inputType="number"
            android:maxLength="2"
            android:text="20"
            android:hint="Size"
            android:background="@drawable/black_border"/>

        <SeekBar
            android:id="@+id/sizeSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="15"
            android:max="75"
            android:layout_weight="1"
            android:visibility="visible"
            android:padding="@dimen/app_normal_padding"
            android:layout_margin="@dimen/app_min_margin"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="39dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="@dimen/app_normal_padding"
        android:layout_margin="@dimen/app_min_margin"
        android:background="@drawable/black_border"
        android:ems="5"
        android:gravity="top"
        android:hint="Enter text here"
        android:inputType="text" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btnDoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"/>


</LinearLayout>
